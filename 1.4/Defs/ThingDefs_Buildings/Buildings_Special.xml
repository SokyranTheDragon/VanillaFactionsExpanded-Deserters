  <ThingDef ParentName="VFED_EmpireBuildingBase">
    <defName>VFED_SurveillancePillar</defName>
    <label>surveillance pillar</label>
    <description>todo</description>
    <graphicData>
      <texPath>Structures/Misc/ImperialBiosecuredCrate</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4, 4)</drawSize>
    </graphicData>
	<size>(2, 2)</size>
    <costList>
      <Steel>150</Steel>
      <ComponentSpacer>5</ComponentSpacer>
    </costList>
    <statBases>
      <MaxHitPoints>400</MaxHitPoints>
      <Flammability>0.5</Flammability>
      <Beauty>0</Beauty>
      <Mass>15</Mass>
      <WorkToBuild>200</WorkToBuild>
    </statBases>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>false</shortCircuitInRain>
        <basePowerConsumption>100</basePowerConsumption>
      </li>
      <li Class="CompProperties_SendSignalOnMotion">
        <onlyHumanlike>true</onlyHumanlike>
        <radius>12.9</radius>
        <enableAfterTicks>1200</enableAfterTicks>
        <signalTag>CompCanBeDormant.WakeUp</signalTag>
